<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>
       
        <template id="report_print_mrp_bom_report">
            <!-- id unico template -->
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                       
                    </div>
                    <div class="article o_report_layout_standard">
                       <div class="page">
                        <style>
                            table {
                              border-collapse: collapse;
                              width: 100%;
                            }

                            th, td {
                              padding: 8px;
                              text-align: left;
                              border-bottom: 1px solid #ddd;
                            }
                        </style>
                            <h3>
                                BoM Structure Cost
                            </h3>
                            <h4>
                                <span t-field="o.product_tmpl_id"></span>
                            </h4>
                            <table width="100%">
                                <t t-foreach="o.bom_line_ids" t-as="line">
                                  <tr>
                                    <th>Producto</th>
                                    <th>LdM</th>
                                    <th>Cantidad</th>
                                    <th>Unidad de medida</th>
                                    <th>Costo del producto</th>
                                    <th>Coste de Lista de Materiales</th>
                                  </tr>
                                  <tr>
                                    <td>
                                        <span t-field="line.product_id"></span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>
                                    <td>
                                        <span t-field="line.product_qty"></span>
                                    </td>
                                    <td>
                                        <span t-field="line.product_uom_id"></span>
                                    </td>
                                    <td>
                                        <span t-field="line.product_id.standard_price"></span>
                                    </td>
                                    <td>
                                        <span></span>
                                    </td>
                                  </tr>
                                </t>
                            </table>
                       </div>
                    </div>
                    <div class="footer">
                        
                    </div>
                </t>
            </t>
        </template>
        
        <report
                id="report_print_mrp_bom"
                string="Lista de materiales comercial"
                model="mrp.bom"
                report_type="qweb-pdf"
                name="coondev_custom_reports.report_print_mrp_bom_report"
        />

  </data>
</odoo>
