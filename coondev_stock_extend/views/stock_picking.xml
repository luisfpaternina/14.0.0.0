<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[(@name='picking_type_id')]" position="after">
                    <field name="is_transfer" invisible="1"/>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='location_id']" position="attributes">
                    <attribute name="attrs">{"readonly": [["picking_type_code","=","incoming"]], "readonly": [["is_transfer","=",True]]}</attribute>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='location_dest_id']" position="attributes">
                    <attribute name="domain">[["is_transfer","=",True]]</attribute>
                </xpath>

                <xpath expr="//button[@name='button_validate']" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_transfer', '!=', False)]}</attribute>
                </xpath>

                <xpath expr="//form/header/button[3]" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_transfer', '!=', False)]}</attribute>
                </xpath>

                <xpath expr="//button[@name='button_validate']" position="attributes">
                     <attribute name="groups">coondev_stock_extend.stock_picking_validate_manager_group</attribute>
                </xpath>

                <xpath expr="//form/header/button[3]" position="attributes">
                    <attribute name="groups">coondev_stock_extend.stock_picking_validate_manager_group</attribute>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>

