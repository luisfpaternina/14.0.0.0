<?xml version="1.0" encoding="utf-8"?>
 <odoo>
   <data> 
      <template id="davitel_invoice_report"  inherit_id="account.report_invoice_document_with_payments">

         <!--Agregar negrita -->
         <xpath expr="/t/t/div/div[2]/div/div/table/t[4]/tr/td[2]/span" position="attributes">
            <attribute name="class" separator=" " add="o_bold"/>
         </xpath>

         <!--Aumentar tamaño de etiqueta (total) en la tabla de productos -->
         <xpath expr="/t/t/div/div[2]/div/div/table/t[4]/tr/td[2]/span" position="attributes">
            <attribute name="class" separator=" " add="h5"/>
         </xpath>

         <!--Aumentar tamaño al total de la tabla de productos -->
         <xpath expr="/t/t/div/div[2]/div/div/table/t[4]/tr/td[1]/strong" position="replace">
            <strong>
               <font style="font-size: 20px;">Total</font>
            </strong>
         </xpath>

         <!--Eliminar parrafo de la vista principal -->
         <xpath expr="/t[1]/t[1]/div[1]/p[1]" position="replace">
            
         </xpath>

         <!--Eliminar parrafo de la vista principal -->
         <xpath expr="/t[1]/t[1]/div[1]/p[2]" position="replace">
            
         </xpath>

         <!--Agregar modo de pago debajo de la tabla de productos -->
         <xpath expr="/t/t/div/div[2]" position="after">
            <div class="row">
               <div class="col">
                  <strong><span>Modo de pago:</span></strong>
                  <span> </span>
                  <span t-field="o.payment_mode_id"></span>
               </div>
            </div>
         </xpath>

         <div id="informations" position="replace">
            <div id="informations" class="row mt8 mb8">
               <div class="col-6">
                  <!--Agregar campos con la información del cliente -->
                  <!-- Calle, altura, ciudad, estado, código postal, lote, manzana-->
                  <strong><span>Cliente:</span></strong><span> </span><span t-field="o.partner_id"></span>
                  <br></br>
                  <strong><span>Calle:</span></strong><span> </span>
                  <span t-field="o.partner_id.street_id"></span><span> </span>
                  <strong><span>Altura:</span></strong><span> </span>
                  <span t-field="o.partner_id.street_number"></span>
                  <br></br>
                  <strong><span>Ciudad:</span></strong><span> </span>
                  <span t-field="o.partner_id.city"></span><span> </span>
                  <strong><span>Estado:</span></strong><span> </span>
                  <span t-field="o.partner_id.state_id"></span><span> </span>
                  <br></br>
                  <strong><span>Código postal:</span></strong><span> </span>
                  <span t-field="o.partner_id.zip"></span>
                  <br></br>
                  <strong><span>Lote:</span></strong><span> </span>
                  <span t-field="o.partner_id.lote"></span><span> </span>
                  <strong>Manzana:</strong><span> </span><span></span>
                   <span t-field="o.partner_id.manzana"></span><span> </span>
                  <br></br>
               </div>
               <!--Agregar campo número de cliente en la parte superior derecha -->
               <div class="col-8" align="center">
                  <span>
                     <strong>Número cliente:</strong>
                     <br/>
                  </span>
                  <span></span>
               </div>
            </div>
         </div>

      </template>
   </data>
</odoo>
